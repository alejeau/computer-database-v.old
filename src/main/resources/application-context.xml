<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:component-scan base-package="com.excilys.formation.computerdb.mapper.*" />
	<context:component-scan
		base-package="com.excilys.formation.computerdb.pagination.pager" />
	<context:component-scan
		base-package="com.excilys.formation.computerdb.persistence.impl" />
	<context:component-scan base-package="com.excilys.formation.computerdb.service.impl" />
	<context:component-scan base-package="com.excilys.formation.computerdb.ui" />
	<context:component-scan base-package="com.excilys.formation.computerdb.validators" />

	<!-- jdbcTemplate uses dataSource -->
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- Transactions -->
	<bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<context:property-placeholder location="classpath:dao.properties" />
    <!-- dataSource configuration -->
	<bean id="dataSource" class="com.zaxxer.hikari.HikariDataSource"  destroy-method="close">
		<property name="dataSourceClassName" value="${dataSourceClassName}"/>
		<!-- Tomcat is in BIO mode, so it accepts 200 threads/connections -->
		<property name="maximumPoolSize" value="${maximumPoolSize}" />
		<!-- Maximum lifetime of a connection in the pool. -->
		<property name="maxLifetime" value="${maxLifetime}" />
		<!-- Maximum amount of time that a connection is allowed to sit idle in the pool. -->
		<property name="idleTimeout" value="${idleTimeout}" />
		<property name="dataSourceProperties">
			<props>
				<prop key="url">${url}</prop>
				<prop key="user">${user}</prop>
				<prop key="password">${password}</prop>
				<prop key="prepStmtCacheSize">${prepStmtCacheSize}</prop>
				<prop key="prepStmtCacheSqlLimit">${prepStmtCacheSqlLimit}</prop>
				<prop key="cachePrepStmts">${cachePrepStmts}</prop>
				<prop key="useServerPrepStmts">${useServerPrepStmts}</prop>
			</props>
		</property>
	</bean>
	
</beans>